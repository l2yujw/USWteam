<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/framelayout_result_route_detail_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <SlidingDrawer
                android:id="@+id/slidingdrawer_result_route_detail"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_alignParentBottom="true"
                android:content="@+id/frame_inf_d"
                android:handle="@+id/btn_result_route_detail_handle"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_result_route_detail_handle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/skyblue"
                    android:text="상세 경로" />

                <FrameLayout
                    android:id="@+id/frame_inf_d"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_result_route_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp" />

                </FrameLayout>
            </SlidingDrawer>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>